<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE-edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/style.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
        <title>To-Do-List</title>
    </head>
    <body>

        <% if(message != "") { %>
            <%- include('./components/message-alert') %>
        <% } %>

        <header>
            <% if (task == null) { %>
                <%- include('./components/form', {titleForm: "Listagem de ", action: "create", value:"", idBtn: "addButton", nameBtn: "Adicionar"}); %>
            <% } else { %>
                <%- include('./components/form', {titleForm: "Coloque nome na tarefa", action: `updateOne/${task._id}`, value: task.task, idBtn: "updateButton", nameBtn: "Atualizar"}); %>
            <% } %>
        </header>

        <section id="tasks">
            <ul>
                <% tasksList.forEach((task) => { %>
                    <li class="check-<%= task.check %>">
                        <div>
                            <a href="/check/<%= task._id %>" class="check-<%= task.check %>"><%= task.task %> </a>
                            <span> Criado em <%= task.date.toLocaleDateString('pt-BR') %></span>
                        </div>
                        <div>
                            <a href="/getById/<%= task._id %>/update" class="btnUpdate"><i class="bi bi-pencil-square"></i></a>
                            <a href="/getById/<%= task._id %>/delete" class="btnDelete"><i class="bi bi-file-earmark-x-fill"></i></a>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </section>
        
        <% if (taskDelete != null) { %>
            <%- include('./components/modalDel', {task: taskDelete}) %>
        <% } %>
 
        <p>weba</p>

        <script src="script.js"></script>
    </body>
</html>