<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE-edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/style.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
        <title>To-Do-List</title>
    </head>
    <body>

        <% if(message != "") { %>
            <section class="message message-<%= type %>">
                <p><%= message %></p>
                <span id="close-message"><i class="bi bi-x-square"></i></span>
            </section>
        <% } %>

        <header>
            <h1>Listagem de Tarefas</h1>
            <% if (task == null) { %>
            <form action="/create" method="post">
                <input type="text" name="task" id="task" placeholder="Insira uma tarefa">
                <button id="addButton" type="submit">Adicionar</button>
            </form>
            <% } else { %> 
            <form action="/updateOne/<%= task._id %>" method="post">
                <input type="text" name="task" id="task" value="<%= task.task %>">
                <button id="updateButton" type="submit">Atualizar</button>
            </form>
            <% } %>
        </header>

        <section id="tasks">
            <ul>
                <% tasksList.forEach((task) => { %>
                    <li class="check-<%= task.check %>">
                        <div>
                            <a href="/check/<%= task._id %>" class="check-<%= task.check %>"><%= task.task %> </a>
                            <span> Criado em <%= task.date.toLocaleDateString('pt-BR') %></span>
                        </div>
                        <div>
                            <a href="/getById/<%= task._id %>/update" class="btnUpdate"><i class="bi bi-pencil-square"></i></a>
                            <a href="/getById/<%= task._id %>/delete" class="btnDelete"><i class="bi bi-file-earmark-x-fill"></i></a>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </section>
        
        <% if (taskDelete != null) { %>

        <section id="modal">
            <div id="card">
                <div id="head">
                    <h2>Confirmação</h2>
                    <a href="/" id="close"><i class="bi bi-x-square"></i></a>
                </div>
                <hr>
                <p>Deseja realmente apagar a tarefa: <%= taskDelete.task %> ?</p>
                <div id="btns">
                    <a href="/deleteOne/<%= taskDelete._id %>" id="btnYes">Sim</a>
                    <a href="/" id="btnNot">Não</a>
                </div>
            </div>
        </section>

        <% } %>
 
        <p>weba</p>

        <script src="script.js"></script>
    </body>
</html>